<form method="GET">
  <fieldset class="pb-2 grid grid-cols-1 sm:grid-cols-2 gap-2 md:grid-cols-4">
    <div>
      <label class="font-bold"><strong>Min bedrooms</strong></label>
      <input type="number" name="bedrooms" class="w-full py-1 px-2 border border-event-horizon rounded-sm" />
    </div>
    <div>
      <label class="font-bold"><strong>Max bedrooms</strong></label>
      <input type="number" name="maxBedrooms" class="w-full py-1 px-2 border border-event-horizon rounded-sm" />
    </div>
    <div>
      <label class="font-bold"><strong>Min price</strong></label>
      <input type="number" name="price" class="w-full py-1 px-2 border border-event-horizon rounded-sm" />
    </div>
    <div>
      <label class="font-bold"><strong>Max price</strong></label>
      <input type="number" name="maxPrice" class="w-full py-1 px-2 border border-event-horizon rounded-sm" />
    </div>
  </fieldset>
  <button type="submit" class="inline-block uppercase font-bold tracking-[1.3px] bg-event-horizon w-full text-white rounded-full py-3 px-6">Search</button>
</form>
