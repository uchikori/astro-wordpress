---
import type { HTMLTag } from "astro/types";
type Props = {
  styles: string;
  classes: string;
  level: 1 | 2 | 3 | 4 | 5 | 6;
  content: string;
  transitionName: string;
};
const { level, styles, classes, content, transitionName } = Astro.props;
const Element: HTMLTag = `h${level}`;
---

{!!transitionName && <Element transition:name={transitionName} set:html={content} class={classes} style={styles} />}

{!transitionName && <Element set:html={content} class={classes} style={styles} />}
